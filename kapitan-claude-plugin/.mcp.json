{
  "context7": {
    "command": "npx",
    "args": ["-y", "@upstash/context7-mcp@latest"]
  },
  "git": {
    "command": "uvx",
    "args": ["mcp-server-git"]
  },
  "chrome-devtools": {
    "command": "npx",
    "args": ["-y", "chrome-devtools-mcp@latest"]
  },
  "exa": {
    "command": "npx",
    "args": ["-y", "exa-mcp-server", "--tools=web_search_exa,web_search_advanced_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check"],
    "env": {
      "EXA_API_KEY": "${EXA_API_KEY}"
    }
  }
}
